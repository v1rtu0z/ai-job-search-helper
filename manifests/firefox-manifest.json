{
  "manifest_version": 3,
  "name": "AI job search helper",
  "description": "Analyzes job postings for fit, tailors resumes, and drafts cover letters using AI, based on your resume and preferences.",
  "version": "1.1",
  "action": {
    "default_icon": {
      "16": "images/icon_zoomed_16x16.png",
      "32": "images/icon_zoomed_32x32.png",
      "48": "images/icon_zoomed_48x48.png",
      "128": "images/icon_zoomed_128x128.png"
    },
    "default_title": "AI job search helper"
  },
  "sidebar_action": {
    "default_icon": {
      "16": "images/icon_zoomed_16x16.png",
      "32": "images/icon_zoomed_32x32.png",
      "48": "images/icon_zoomed_48x48.png",
      "128": "images/icon_zoomed_128x128.png"
    },
    "default_title": "AI job search helper",
    "default_panel": "sidepanel.html",
    "open_at_install": true
  },
  "icons": {
    "16": "images/icon_zoomed_16x16.png",
    "32": "images/icon_zoomed_32x32.png",
    "48": "images/icon_zoomed_48x48.png",
    "128": "images/icon_zoomed_128x128.png"
  },
  "background": {
    "scripts": ["js/service_worker.js"],
    "type": "module"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "commands": {
    "analyze-job-posting-shortcut": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Analyze the selected text for job fit."
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false,
    "open_in_tab": true
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-job-search-helper@v1rtu0z.github.com",
      "strict_min_version": "109.0"
    }
  }
}
